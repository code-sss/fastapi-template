{
    "name": "FastAPI DevContainer",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.13-bookworm",
    "runArgs": [
        "--gpus",
        "all"
    ],
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "charliermarsh.ruff"
            ]
        }
    }
}
